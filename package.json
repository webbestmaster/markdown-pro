{
  "name": "markdown-pro",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webbestmaster/markdown-pro.git"
  },
  "bugs": {
    "url": "https://github.com/webbestmaster/markdown-pro/issues"
  },
  "homepage": "https://github.com/webbestmaster/markdown-pro#readme",
  "license": "MIT",
  "author": {
    "name": "WebBestMaster",
    "email": "web.best.master@gmail.com"
  },
  "version": "1.1.2",
  "description": "Markdown Pro - the lightest markdown parser",
  "keywords": [
    "markdown",
    "markdown-pro",
    "parser",
    "lite",
    "typescript",
    "ts",
    "flow",
    "flowjs"
  ],
  "main": "dist/index.js",
  "types": "dist/library.d.ts",
  "files": [
    "/dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development SIDE=front webpack-cli serve --progress",
    "start:transpile-only": "cross-env NODE_ENV=development SIDE=front TS_TRANSPILE_ONLY=true webpack-cli serve --progress",
    "tsc-watch": "tsc -p ./tsconfig.json --watch",
    "_server:start": "node ./dist-server/dist/index.js",
    "_server:build": "cross-env NODE_ENV=production SIDE=back IS_SERVER_PROD_BUILD=true NODE_OPTIONS=--max-old-space-size=1536 webpack --progress",
    "_server:watch:build": "cross-env NODE_ENV=production SIDE=back webpack --progress --watch",
    "_server:nodemon": "nodemon ./dist-server/dist/index.js",
    "front:build": "cross-env NODE_ENV=production SIDE=front NODE_OPTIONS=--max-old-space-size=1536 webpack --progress",
    "front:build-library": "cross-env NODE_ENV=production SIDE=front IS_BUILD_LIBRARY=true NODE_OPTIONS=--max-old-space-size=256 webpack --progress && npm run front:tsc-library",
    "check": "npm run ts-coverage && npm run tsc && npm run eslint && npm run stylelint",
    "check:fix": "npm run prettier && npm run ts-coverage && npm run tsc && npm run eslint:fix && npm run stylelint:fix",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "stylelint": "stylelint ./**.scss",
    "stylelint:fix": "stylelint ./**.scss --fix",
    "prettier": "prettier --write \"./**/*.(js|ts|tsx)\" --loglevel warn",
    "tsc": "tsc -p ./tsconfig.json",
    "front:tsc-library": "tsc -p ./tsconfig.library.json && npm run front:tsc-library-css",
    "front:tsc-library-css": "cross-env NODE_ENV=production SIDE=front IS_BUILD_LIBRARY=true node ./webpack/util/library/css.js",
    "ts-coverage:front": "typescript-coverage-report --threshold=100 --strict=true --project ./www/",
    "ts-coverage:server": "typescript-coverage-report --threshold=100 --strict=true --project ./server/",
    "ts-coverage": "npm run ts-coverage:front && npm run ts-coverage:server",
    "test:e2e": "jest --config='test-e2e/config/jest.config.js' ./test-e2e/ --runInBand --silent --passWithNoTests",
    "test:unit": "jest --config='test-unit/config/jest.config.ts' ./www/ --coverage --silent --passWithNoTests",
    "pre-commit-hook": "npm run check",
    "_postinstall": "cp ./git-hooks/pre-commit ./.git/hooks",
    "zip": "zip -9 --exclude=*node_modules* --exclude=*.git* -r my-project_`git symbolic-ref --short HEAD`-`date +%Y-%m-%d--%H-%M-%S` ./"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-strict-mode": "^7.18.6",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.4",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "ajv": "^8.11.2",
    "babel-loader": "^9.1.0",
    "circular-dependency-plugin": "^5.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "css-modules-typescript-loader": "^4.0.1",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "eslint": "^8.30.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.17.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.3.1",
    "jest-transform-stub": "^2.0.0",
    "mini-css-extract-plugin": "^2.7.2",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.20",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.1",
    "raw-loader": "^4.0.2",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "script-ext-html-webpack-plugin": "^2.1.5",
    "style-loader": "^3.3.1",
    "stylelint": "^14.16.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^4.3.0",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "typescript-coverage-report": "^0.7.0",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-node-externals": "^3.0.0"
  }
}
