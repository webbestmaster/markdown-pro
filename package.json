{
  "name": "markdown-pro",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webbestmaster/markdown-pro.git"
  },
  "bugs": {
    "url": "https://github.com/webbestmaster/markdown-pro/issues"
  },
  "homepage": "https://github.com/webbestmaster/markdown-pro#readme",
  "license": "MIT",
  "author": "",
  "version": "1.0.20",
  "description": "Markdown Pro",
  "keywords": [
    "markdown",
    "markdown-pro",
    "parser",
    "typescript",
    "ts",
    "flow",
    "flowjs"
  ],
  "main": "dist/index.js",
  "types": "dist/library.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-cli serve --progress",
    "start:transpile-only": "cross-env NODE_ENV=development TS_TRANSPILE_ONLY=true webpack-cli serve --progress",
    "tsc-watch": "tsc -p ./tsconfig.json --watch",
    "build": "cross-env NODE_ENV=production NODE_OPTIONS=--max-old-space-size=1536 webpack --progress",
    "build-library": "cross-env NODE_ENV=production IS_BUILD_LIBRARY=true NODE_OPTIONS=--max-old-space-size=1536 webpack --progress && npm run tsc-library",
    "check": "npm run ts-coverage && npm run tsc && npm run test:unit && npm run eslint && npm run stylelint",
    "check:fix": "npm run prettier && npm run ts-coverage && npm run tsc && npm run test:unit && npm run eslint:fix && npm run stylelint:fix",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "stylelint": "stylelint ./**.scss",
    "stylelint:fix": "stylelint ./**.scss --fix",
    "prettier": "prettier --write \"./**/*.(js|ts|tsx)\" --loglevel warn",
    "tsc": "tsc -p ./tsconfig.json",
    "tsc-library": "tsc -p ./tsconfig.library.json",
    "ts-coverage": "typescript-coverage-report --threshold=99.95 --strict=true --project ./www/",
    "test:e2e": "jest --config='test-e2e/config/jest.config.js' ./test-e2e/ --runInBand",
    "test:unit": "jest --config='test-unit/config/jest.config.js' ./www/ --coverage",
    "pre-commit-hook": "npm run check",
    "_postinstall": "cp ./git-hooks/pre-commit ./.git/hooks"
  },
  "dependencies": {
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "@types/react-router": "^5.1.16",
    "@types/react-router-dom": "^5.1.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-localization-library": "^0.0.16",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0",
    "react-router-dom-hook": "^0.0.12",
    "react-system-hook": "^0.0.13"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-strict-mode": "^7.14.5",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@types/jest": "^27.0.1",
    "@types/puppeteer": "^5.4.4",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "circular-dependency-plugin": "^5.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "css-modules-typescript-loader": "^4.0.1",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.25.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "eslint-plugin-typescript-sort-keys": "^1.8.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.2.0",
    "mini-css-extract-plugin": "^2.3.0",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "prettier": "^2.4.1",
    "puppeteer": "^10.2.0",
    "raw-loader": "^4.0.2",
    "sass": "^1.41.1",
    "sass-loader": "^12.1.0",
    "script-ext-html-webpack-plugin": "^2.1.5",
    "style-loader": "^3.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.21.0",
    "terser-webpack-plugin": "^5.2.4",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "typescript-coverage-report": "^0.6.0",
    "webpack": "^5.53.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  }
}
